version: '3.8'

services:
  backend:
    volumes:
      - "./:/app"
    build: .
    ports:
      - "8001:8001"
    depends_on:
      - start__tgwui
      - start__redis
      - start__postgres
    networks:
      - start_network

  celery:
    volumes:
      - "./:/app"
    build:
      context: .
      dockerfile: DockerfileCelery
    depends_on:
      - start__tgwui
      - start__redis
      - start__postgres
    networks:
      - start_network
    
  gui:
    build: ./gui
    ports:
      - "3000:3000"
    environment:
      - NEXT_PUBLIC_API_BASE_URL=http://localhost:8001
    networks:
      - start_network
    volumes:
      - ./gui:/app
      - /app/node_modules
      - /app/.next

  start__tgwui:
    build:
      context: .
      dockerfile: ./tgwui/DockerfileTGWUI
    container_name: start__tgwui
    environment:
      - EXTRA_LAUNCH_ARGS="--listen --verbose --extensions openai --threads 4 --n_ctx 1600"
    ports:
      - 7860:7860  # Default web port
      - 5000:5000  # Default API port
      - 5005:5005  # Default streaming port
      - 5001:5001  # Default OpenAI API extension port
    volumes:
      - ./tgwui/config/loras:/app/loras
      - ./tgwui/config/models:/app/models
      - ./tgwui/config/presets:/app/presets
      - ./tgwui/config/prompts:/app/prompts
      - ./tgwui/config/softprompts:/app/softprompts
      - ./tgwui/config/training:/app/training
    logging:
      driver:  json-file
      options:
        max-file: "3"   # number of files or file count
        max-size: '10m'
    networks:
      - start_network

  start__redis:
    image: "docker.io/library/redis:latest"
    networks:
      - start_network

  start__postgres:
    image: "docker.io/library/postgres:latest"
    environment:
      - POSTGRES_USER=startagi
      - POSTGRES_PASSWORD=password
      - POSTGRES_DB=start_agi_main
    volumes:
      - startagi_postgres_data:/var/lib/postgresql/data/
    networks:
      - start_network
    ports:
      - "5432:5432"

networks:
  start_network:
    driver: bridge

volumes:
  startagi_postgres_data:
